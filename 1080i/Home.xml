<?xml version="1.0" encoding="utf-8"?>
<window id="0">
    <include condition="!Skin.HasSetting(BlackGlassMode)|Skin.HasSetting(DisableSlidingAnimations)">OpenClose</include>
    <defaultcontrol>300</defaultcontrol>
    <onload condition="!Skin.HasSetting(Hide.Favourites)">RunScript(script.favourites)</onload>
    <!--<onload condition="IsEmpty(Skin.String(SkinHelper.RandomFanartDelay))">Skin.SetString(SkinHelper.RandomFanartDelay,9)</onload>-->
    <onload condition="Skin.HasSetting(StopPlaybackOnMenu)">PlayerControl(stop)</onload>
    <controls>
        <!--DUMMY BUTTON-->
        <control type="button" id="378432">
            <visible>[
                Control.IsVisible(8000)|
                Control.IsVisible(8001)|
                Control.IsVisible(8002)|
                Control.IsVisible(8003)|
                Control.IsVisible(8004)|
                Control.IsVisible(8005)|
                Control.IsVisible(8006)|
                Control.IsVisible(8007)|
                Control.IsVisible(8008)|
                Control.IsVisible(8009)|
                Control.IsVisible(8010)|
                Control.IsVisible(8011)
                ]</visible>
            <include>HiddenButton</include>
        </control>
        <!--DUMMY BUTTON-->
        <control type="button" id="378433">
            <visible>[
                Control.HasFocus(60)|
                ControlGroup(48000).HasFocus|
                ControlGroup(48001).HasFocus|
                ControlGroup(48002).HasFocus|
                ControlGroup(48003).HasFocus|
                ControlGroup(48004).HasFocus|
                ControlGroup(48005).HasFocus|
                ControlGroup(48006).HasFocus|
                ControlGroup(48007).HasFocus|
                ControlGroup(48008).HasFocus|
                ControlGroup(48009).HasFocus|
                ControlGroup(48010).HasFocus|
                ControlGroup(48011).HasFocus
                ]</visible>
            <include>HiddenButton</include>
        </control>
        <include>Fanart_Art</include>
        <include>Player_Show</include>
        <control type="image">
            <visible>Skin.HasSetting(BlackGlassMode)</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <include>BgOverlayFanart</include>
            <include>OverlayBG</include>
        </control>
        <control type="image">
            <visible>!Skin.HasSetting(BlackGlassMode)</visible>
            <posx>0</posx>
            <posy>-3</posy>
            <texture border="10">common/basichome_upper_gradient.png</texture>
            <width>1920</width>
            <height>240</height>
        </control>
        <control type="group">
            <animation effect="fade" start="0" end="100" time="1000" condition="Window.Previous(Startup.xml)">Conditional</animation>
            <animation effect="fade" start="0" end="100" time="200" condition="!Window.Previous(Startup.xml)">Conditional</animation>
            <include condition="Skin.HasSetting(VerticalHome)">Vertical_Home_Layout</include>
            <include condition="!Skin.HasSetting(VerticalHome)+!Skin.HasSetting(BlackGlassMode)">Horizontal_Home_Layout</include>
            <include condition="!Skin.HasSetting(VerticalHome)+Skin.HasSetting(BlackGlassMode)">Horizontal_Home_Layout_BG</include>
        </control>
        <include>Time</include>
        <control type="group">
            <visible>!Skin.HasSetting(VerticalHome)</visible>
            <include>Icon_Fade</include>
            <control type="label">
                <include condition="Skin.HasSetting(BlackGlassMode)+!Skin.HasSetting(DisableSlidingAnimations)">OpenCloseSlideRight</include>
                <include>WindowTitle</include>
                <label>$VAR[HomeTitles]</label>
            </control>
            <control type="label">
                <include condition="Skin.HasSetting(BlackGlassMode)+!Skin.HasSetting(DisableSlidingAnimations)">OpenCloseSlideRight</include>
                <include>WindowTitleSub</include>
                <label>$VAR[HomeSubTitles]</label>
            </control>
        </control>
        <include>NowPlaying</include>
    </controls>
</window>
