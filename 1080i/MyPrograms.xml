                <label>$LOCALIZE[582]</label>
            </control>
            <control type="grouplist" id="9000">
                <include>LeftMenuButtonGroup</include>
                <onleft>9000</onleft>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
